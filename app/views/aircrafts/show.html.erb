
<h1><%= @aircraft.make %></h1>



<div id='aircraft-booking-dates' data-unavailable="<%= @aircraft.unavailable_dates.to_json %>">
    <%# if current_user.id != @flat.user_id  %>
      <%= simple_form_for [@aircraft, @booking] do |f| %>
        <%= f.label :booking_type %>
        <%= f.text_field :booking_type %>
        <%= f.input :start_date, as: :string, type: :text %>
        <%= f.input :end_date, as: :string, type: :text %>
        <%= f.submit "Book", class: "btn btn-primary" %>
      <% end %>
    <%# end %>
 </div>
