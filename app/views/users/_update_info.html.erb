<div class="container d-flex justify-content-center my-3">
  <h3>ACCOUNT INFORMATION</h3>
</div>
<div class="container my-3">
  <% if user.photo.attached? %>
    <div class="my-3">
    <%= cl_image_tag user.photo.key %>
    </div>
    <%= render 'user_details', user: user %>
  <% else %>
    <%= render 'user_details', user: user %>
  <% end %>
</div>
<div class="d-flex justify-content-center my-5">
  <a href="#editUserModalCenter" type="button" class="nav-custom grey" data-toggle="modal">UPDATE USER INFO</a>
</div>
<div class="modal fade" id="editUserModalCenter" tabindex="-1" role="dialog" aria-labelledby="editUserModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">UPDATE PERSONAL INFORMATION</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'edit_account_form', user: user %>
      </div>
    </div>
  </div>
</div>
