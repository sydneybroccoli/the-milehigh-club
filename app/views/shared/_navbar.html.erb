            <li class="nav-item">
              <%= link_to "VIEW PLANES",
                aircrafts_path,
                class: "nav-link nav-custom white" %>
            </li>
            <li class='nav-item'>
              <div class="login align-right">
                <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "nav-link nav-custom  white"%>
              </div>
            </li>
            <li class="nav-item dropdown">
              <% if current_user.photo.attached? %>
                <%= link_to user_path(current_user) do %>
                  <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face, height: 40, width: 40, class: "avatar" %>
                <% end %>
              <% else %>
                <%= link_to user_path(current_user) do %>
                  <%= cl_image_tag 'avatar',
